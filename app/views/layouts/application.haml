!!!
%html
  %head
    %title File Storage
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header
      .header-inner
        =link_to "File Storage", root_path, id: :logo

        %nav
          - if user_signed_in?
            = link_to "Files", root_path if @docs.present?
            = link_to "Create Doc", new_doc_path unless @docs.blank?
            = link_to "Sign Out", destroy_user_session_path, method: :delete

          - else
            = link_to "Log In", new_user_session_path

    - if notice
      %p.notice= notice
    - if alert
      %p.alert= alert

    = yield
