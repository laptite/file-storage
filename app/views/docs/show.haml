.wrapper-with-padding
	#doc-show
		%h1.title= @doc.title
		%p= simple_format @doc.content

		.buttons
			= link_to "Edit", edit_doc_path(@doc), class: "button"
			= link_to "Delete", doc_path(@doc), method: :delete, data: { confirm: "Are you sure you want to delete this document?" }, class: "button"